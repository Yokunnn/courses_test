<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextInputLayout" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_rad_text_input</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corner_rad_text_input</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_rad_text_input</item>
        <item name="boxCornerRadiusTopStart">@dimen/corner_rad_text_input</item>
        <item name="boxBackgroundColor">@color/light_gray</item>
        <item name="boxStrokeColor">@color/transparent</item>
        <item name="cursorColor">@color/white</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="TextInputEditText" parent="Widget.Material3.TextInputEditText.FilledBox">
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyMedium</item>
        <item name="android:textColorHint">@color/half_white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="ExternalButton" parent="Widget.Material3.Button">
        <item name="iconSize">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
    </style>

    <style name="BottomNavigationStyle">
        <item name="android:background">@drawable/nav_with_stroke</item>
        <item name="itemIconTint">@color/nav_item_color</item>
        <item name="itemTextColor">@color/nav_item_color</item>
        <item name="itemActiveIndicatorStyle">@style/ActiveIndicatorStyle</item>
    </style>

    <style name="ActiveIndicatorStyle" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/light_gray</item>
    </style>
</resources>